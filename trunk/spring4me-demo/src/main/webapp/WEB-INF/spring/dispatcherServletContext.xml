	<bean id="jspViewResolver" class="org.osforce.spring4me.web.view.ExtendsInternalResourceViewResolver">
		<property name="viewClass" value="org.osforce.spring4me.web.view.ExtendsInternalResourceView"/>
		<property name="order" value="2"/>
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
		<property name="themePrefix" value="/WEB-INF/themes/"/>
		<property name="themeSuffix" value=".ftl"/>
	</bean>
	 -->
	 <!-- 
	<bean id="jspViewResolver" class="org.osforce.spring4me.web.view.ExtendsInternalResourceViewResolver">
		<property name="order" value="1"/>
	</bean>
	 -->
	<!-- 
	<bean id="ftlViewResolver" class="org.osforce.spring4me.web.view.ExtendsFreeMarkerViewResolver">
		<property name="viewClass" value="org.osforce.spring4me.web.view.ExtendsFreeMarkerView"/>
		<property name="contentType" value="text/html;charset=UTF-8"/>
		<property name="order" value="1"/>
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".ftl"/>
		<property name="themePrefix" value="/WEB-INF/themes/"/>
		<property name="themeSuffix" value=".ftl"/>
	</bean>
	 -->
	<bean id="ftlViewResolver" class="org.osforce.spring4me.web.view.freemarker.ExtendsFreeMarkerViewResolver">
		<property name="contentType" value="text/html;charset=UTF-8"/>
		<property name="order" value="2"/>
	</bean>
	<!-- View Resolver End -->
</beans>
