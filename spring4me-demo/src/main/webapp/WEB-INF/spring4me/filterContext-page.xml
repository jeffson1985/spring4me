<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="classpath:/application.properties"/>

	<bean class="org.osforce.spring4me.web.navigation.config.xml.XmlNavigationConfigFactory">
		<property name="configLocation" value="/WEB-INF/sitemap.xml" />
	</bean>

	<bean class="org.osforce.spring4me.web.page.config.xml.XmlPageConfigFactory" />

	<bean class="org.osforce.spring4me.web.flow.config.xml.XmlFlowConfigFactory">
		<property name="configLocation" value="/WEB-INF/flows.xml" />
	</bean>

	<bean class="org.osforce.spring4me.web.flow.engine.impl.StandardFlowEngine">
		<property name="eventListeners">
			<list>
				<bean class="org.osforce.spring4me.web.flow.engine.impl.FlowEventPublisher" />
			</list>
		</property>
	</bean>

	<bean id="requestBackupCacheProvider" class="org.osforce.spring4me.web.cache.simple.RequestBackupProvider"></bean>

	<bean class="org.osforce.spring4me.web.page.render.impl.StandardPageFlowRender" />

</beans>
